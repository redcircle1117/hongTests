<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_main"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:hint="用户名"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/iv_main_drop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/down_arrow"
        android:onClick="showList"
        android:clickable="true"
        android:layout_alignTop="@+id/et_main"
        android:layout_alignEnd="@+id/et_main" />


    
    <com.example.hong.dropdown.MyView
        android:id="@+id/iv_main_bg"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.example.hong.dropdown.DefineView
        android:id="@+id/dv_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_main_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp" />
</RelativeLayout>
