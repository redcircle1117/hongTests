<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/rl_main_level3"
        android:layout_width="280dp"
        android:layout_height="140dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/level3"
        android:layout_centerHorizontal="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/channel1"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentStart="true"
            android:id="@+id/iv_main_channale1" />

        <ImageView
            android:id="@+id/iv_main_channale2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/channel2"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_alignStart="@+id/iv_main_channale1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/channel3"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="34dp"
            android:layout_alignStart="@+id/iv_main_channale2"
            android:id="@+id/iv_main_channale3" />
        <ImageView
            android:id="@+id/iv_main_channale4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/channel4"
            android:layout_centerHorizontal="true"/>
        <ImageView

            android:id="@+id/iv_main_channale5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/channel5"
            android:layout_marginRight="16dp"
            android:layout_alignTop="@+id/iv_main_channale3"
            android:layout_toStartOf="@+id/iv_main_channale7" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/channel6"/>


        <ImageView
            android:id="@+id/iv_main_channale7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/channel7"
            android:layout_marginRight="5dp"
            android:layout_alignTop="@+id/iv_main_channale1"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_main_level2"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/level2"
        android:layout_centerHorizontal="true">
        <ImageView
            android:onClick="clickMenu"
            android:id="@+id/iv_main_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_menu"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/iv_main_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:src="@drawable/icon_search"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/iv_main_youku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_myyouku"
            android:layout_marginLeft="122dp"
            android:layout_alignTop="@+id/iv_main_search" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_main_level1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/level1"
        android:layout_centerHorizontal="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_home"
            android:layout_centerHorizontal="true"
            android:onClick="clickHome"/>

    </RelativeLayout>

</RelativeLayout>
